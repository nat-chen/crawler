<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.natchen.MyMapper">
    <select id="selectNextAvailableLink" resultType="String">
        select link
        from LINK_TO_BE_PROCESSED
        LIMIT 1
    </select>
    <delete id="deleteLink" parameterType="String">
        DELETE
        FROM LINK_TO_BE_PROCESSED
        where link = #{link}
    </delete>
    <insert id="insertNews" parameterType="com.github.natchen.News">
        insert into news (url, title, content, created_at, updated_at)
        values (#{url}, #{title}, #{content}, now(), now())
    </insert>
    <select id="countLink" parameterType="String" resultType="int">
        select count(link)
        from LINK_PROCESSED
        where link = #{link}
    </select>
    <insert id="insertLink" parameterType="HashMap">
        insert into
        <choose>
            <when test="tableName == 'links_already_processed'">
                link_processed
            </when>
            <otherwise>
                link_to_be_processed
            </otherwise>
        </choose>
        (link)
        values #{link}
    </insert>
</mapper>